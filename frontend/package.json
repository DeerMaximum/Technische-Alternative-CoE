{
  "name": "web-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href=/ta-coe-hass/ && tsc --project tsconfig.panel.json",
    "build:panel": "tsc --project tsconfig.panel.json",
    "watch": "ng build --watch --base-href=/ta-coe-hass/ --configuration development",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.4",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/router": "^21.1.3",
    "custom-card-helpers": "1.8.0",
    "ng-select2-component": "^17.2.8",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "angular-eslint": "21.2.0",
    "eslint": "^9.39.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.55.0"
  }
}
